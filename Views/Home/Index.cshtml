@{
    ViewData["Title"] = "Home";
}

    <center>
    <img src="/Imagenes/logo.png" height="300px" width="auto">
    </center>
    <h1 class="text-center pb-4 titulos h1">Bienvenido a Papio Reviews</h1>

    <h3 class="text-center blanco">Hacé un seguimiento de las películas que viste.</h3>
    <h3 class="text-center blanco">Guardá las que quieras ver.</h3> 
    <h3 class="text-center blanco pb-5">Contale a tus amigos lo que es bueno.</h3>
  


<center>
      <h1 class="titulos pt-5 pb-3"><u>Ultimos estrenos </u></h1>

            <div class="slide-inner">
                <input class="slide-open" type="radio" id="slide-1" 
                      name="slide" aria-hidden="true" hidden="" checked="checked">
                <div class="slide-item">
                      <a href='@Url.Action("VerInfoPeliculas","Home", new {IdPelicula=ViewBag.PelisRecientes[0].IdPelicula})'><img src="@ViewBag.PelisRecientes[0].Foto"></a>
                </div>
                <input class="slide-open" type="radio" id="slide-2" 
                      name="slide" aria-hidden="true" hidden="">
                <div class="slide-item">
                    <a href='@Url.Action("VerInfoPeliculas","Home", new {IdPelicula=ViewBag.PelisRecientes[1].IdPelicula})'><img src="@ViewBag.PelisRecientes[1].Foto"></a>
                </div>
                <input class="slide-open" type="radio" id="slide-3" 
                      name="slide" aria-hidden="true" hidden="">
                <div class="slide-item">
                     <a href='@Url.Action("VerInfoPeliculas","Home", new {IdPelicula=ViewBag.PelisRecientes[2].IdPelicula})'><img src="@ViewBag.PelisRecientes[2].Foto"></a>
                </div>
                <label for="slide-3" class="slide-control prev control-1">‹</label>
                <label for="slide-2" class="slide-control next control-1">›</label>
                <label for="slide-1" class="slide-control prev control-2">‹</label>
                <label for="slide-3" class="slide-control next control-2">›</label>
                <label for="slide-2" class="slide-control prev control-3">‹</label>
                <label for="slide-1" class="slide-control next control-3">›</label>
                <ol class="slide-indicador">
                    <li>
                        <label for="slide-1" class="slide-circulo">•</label>
                    </li>
                    <li>
                        <label for="slide-2" class="slide-circulo">•</label>
                    </li>
                    <li>
                        <label for="slide-3" class="slide-circulo">•</label>
                    </li>
                </ol>
           
        </div>
</center>



      <h1 class="titulos pt-5 pb-3 text-center"><u>Pelicula destacada</u></h1>
    <div class="container pt-3">
      <div class="row">
        <div class="col"></div>
         <div class="col-4"> <a href='@Url.Action("VerInfoPeliculas","Home", new {IdPelicula=ViewBag.PeliExito.IdPelicula})'><img src="@ViewBag.PeliExito.Foto" class="sombra" height="500px" width="auto" class="pt-5"></a></div>
         <div class="col-6 flex-item-right"><h1 class="">@ViewBag.PeliExito.Nombre</h1><p class="pt-3 blanco ">@ViewBag.PeliExito.Sinopsis</p> </div>
         
      </div>
    </div>






  <center>
    <h1 class="pt-5 titulos"><u>Descubre una película!</u></h1>

     <div class="container">

      <a href='@Url.Action("VerInfoPeliculas","Home", new {IdPelicula=ViewBag.PeliRandom.IdPelicula})'><img src="@ViewBag.PeliRandom.Foto" id="Descubrir"   height="500px" width="auto" class="pt-3"></a>
      <div class="" id="mostrar"></div>
   
    
    <div class="pt-3">
      <button id="Cambiar" type="button" onclick="CambiarFoto()" class="btn btn-light button1">
         <span></span>
         <span></span>
        <span></span>
        <span></span> Descubrir!
     </button>
        </div>
    </div>
</center>



 
